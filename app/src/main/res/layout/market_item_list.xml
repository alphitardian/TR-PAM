<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/coin_market_background"
    android:layout_margin="5dp"
    android:elevation="10dp">

    <TextView
        android:id="@+id/update_percentage_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/uptrend"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="4.5%"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/update_percentage_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/uptrend"
        android:layout_toEndOf="@id/update_percentage_textview"
        android:src="@drawable/ic_baseline_arrow_drop_up_24" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/current_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_percentage_textview"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="0.05640"
        android:textSize="28dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/crypto_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/crypto_shortname_textview"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/crypto_image"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/montserrat"
        android:text="BTC"
        android:textColor="@color/white"
        android:textAlignment="center" />

</RelativeLayout>