<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryBackground"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/newEditTextFullname"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Fullname"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/newEditTextUsername"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Username"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/newEditTextEmail"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Email"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/newEditTextAddress"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Address"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/newEditTextPassword"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Password"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/newEditTextConfirmPassword"
            android:padding="10dp"
            android:background="@drawable/auth_form"
            android:textColor="@color/light"
            android:textColorHint="@color/light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="New Confirm Password"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/radius_button"
            android:text="save"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp" />

    </LinearLayout>
</LinearLayout>