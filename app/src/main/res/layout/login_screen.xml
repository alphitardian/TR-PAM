<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#18192F"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warung"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kripto."
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_btc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back,"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:paddingBottom="40dp"
            android:fontFamily="@font/montserrat_bold"></TextView>

    </LinearLayout>
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <EditText
           android:id="@+id/editTextEmail"
           android:padding="10dp"
           android:background="@drawable/auth_form"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:textColor="@color/light"
           android:textColorHint="@color/light"
           android:hint="@string/login_email"
           android:inputType="textEmailAddress"
           android:fontFamily="@font/montserrat"
           android:layout_marginBottom="10dp"/>

       <EditText
           android:id="@+id/editTextPassword"
           android:padding="10dp"
           android:textColorHint="@color/light"
           android:textColor="@color/light"
           android:background="@drawable/auth_form"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:fontFamily="@font/montserrat"
           android:hint="@string/login_password"/>

       <Button
           android:background="@drawable/auth_button"
           android:backgroundTint="@color/white"
           android:id="@+id/btnLogin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/login_button"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_marginTop="25dp"
           android:layout_marginRight="5dp"
           android:fontFamily="@font/montserrat"/>

        <TextView
            android:layout_marginVertical="5pt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:text="Don't have an account ?">

        </TextView>

        <TextView
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="register"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"></TextView>


   </LinearLayout>

</LinearLayout>