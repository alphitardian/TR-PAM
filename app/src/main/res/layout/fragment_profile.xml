<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/gradient_background">

        <TextView
            android:id="@+id/profile_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/profile_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/wallet_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/profile_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_account_balance_wallet_24" />

<!--        <ImageView-->
<!--            android:id="@+id/profile_image"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="300dp"-->
<!--            android:layout_below="@id/profile_textview"-->
<!--            android:layout_alignParentStart="true"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:src="@drawable/ic_launcher_foreground" />-->

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/profile_textview"
            app:civ_border_width="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:civ_border_color="#FFFFFF"/>


        <TextView
            android:id="@+id/full_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="21dp"
            android:text="Full Name" />

        <TextView
            android:id="@+id/username_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_name_textview"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:text="Username" />

        <TextView
            android:id="@+id/username_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_info"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Username" />

        <View
            android:id="@+id/username_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/username_textview"
            android:layout_marginBottom="16dp"
            android:background="#696969"/>

        <TextView
            android:id="@+id/email_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_line"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:text="Email" />

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_info"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Email" />

        <View
            android:id="@+id/email_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email_textview"
            android:layout_marginBottom="16dp"
            android:background="#696969"/>

        <TextView
            android:id="@+id/address_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_line"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:text="Address" />

        <TextView
            android:id="@+id/address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_info"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Address" />

        <View
            android:id="@+id/address_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/address_textview"
            android:layout_marginBottom="16dp"
            android:background="#696969"/>

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/primary_button"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>