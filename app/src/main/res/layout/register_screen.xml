<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_register"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/regisEditTextFullname"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/register_fullname"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regisEditTextUsernam"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/login_username_edittext"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regisEditTextEmail"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/login_email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regisEditTextAddress"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/register_address"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regisEditTextPassword"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/login_password"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/regisEditTextConfirmPassword"
            android:padding="10dp"
            android:background="@drawable/border_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/confirm_password"
            android:layout_marginBottom="10dp"/>


        <Button
            android:id="@+id/btnRegistration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/radius_button"
            android:text="@string/login_register"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginRight="5dp"/>

    </LinearLayout>




</LinearLayout>